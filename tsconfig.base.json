{
	"exclude": ["node_modules", "tmp"],
	"compileOnSave": false,
	"compilerOptions": {
		"lib": ["ES2022", "DOM"],
		"target": "ES2022",
		"module": "esnext",
		"moduleResolution": "node",
		"rootDir": ".",
		"baseUrl": ".",
		"strict": true,
		"sourceMap": true,
		"declaration": false,
		"skipLibCheck": true,
		"importHelpers": true,
		"skipDefaultLibCheck": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"paths": {
			"@PLAYGROUND/BACKEND": ["libs/BACKEND/src/index.ts"],
			"@PLAYGROUND/FRONTEND": ["libs/FRONTEND/src/index.ts"]
		}
	}
}
